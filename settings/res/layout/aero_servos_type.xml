<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

     <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background_color">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_color" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:src="@drawable/black_line" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="@string/type"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_color"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_line_small" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/pulse"
            android:textColor="@color/text_color"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/imageView1" />

        <Spinner
            android:id="@+id/cyclic_pulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:entries="@array/cyclic_pulse_value"
            android:minWidth="230dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cyclic_pulse"
            android:layout_below="@+id/cyclic_pulse"
            android:layout_marginTop="28dp"
            android:text="@string/frequency"
            android:textColor="@color/text_color" />

        <Spinner
            android:id="@+id/cyclic_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:entries="@array/cyclic_frequency_value"
            android:minWidth="230dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/cyclic_pulse_default"
            android:textColor="@color/dashed_dark"
            android:layout_below="@+id/cyclic_pulse"
            android:layout_alignLeft="@+id/cyclic_pulse" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/cyclic_frequency_default"
            android:textColor="@color/dashed_dark"
            android:layout_below="@+id/cyclic_frequency"
            android:layout_alignLeft="@+id/cyclic_frequency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/rudder_pulse_default"
            android:textColor="@color/dashed_dark"
            android:layout_below="@+id/cyclic_frequency"
            android:layout_alignLeft="@+id/cyclic_frequency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/rudder_frequency_default"
            android:textColor="@color/dashed_dark"
            android:layout_below="@+id/cyclic_frequency"
            android:layout_alignLeft="@+id/cyclic_frequency" />
    </RelativeLayout>
	</ScrollView>
</LinearLayout>