<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

	 <ScrollView
            android:id="@+id/scrollView1"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color">

	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/background_color" >
	        
	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/textView2"
	            android:src="@drawable/black_line" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="10dp"
	            android:text="@string/reverse"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="@color/text_color"
	            android:textStyle="bold" />

	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:src="@drawable/black_line_small" />

	        <ImageView
	            android:id="@+id/imageView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/black_line_small" />

	        <CheckBox
	            android:id="@+id/x_pitch_reverse"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/textView2"
	            android:layout_below="@+id/imageView1"
	            android:layout_marginLeft="44dp"
	            android:layout_marginTop="53dp"
	            android:text="@string/x_picth"
	            android:textColor="@color/text_color" />

	        <CheckBox
	            android:id="@+id/y_roll_reverse"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/x_pitch_reverse"
	            android:layout_below="@+id/x_pitch_reverse"
	            android:layout_marginTop="32dp"
	            android:text="@string/y_rool"
	            android:textColor="@color/text_color" />

	        <CheckBox
	            android:id="@+id/z_yaw_reverse"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/y_roll_reverse"
	            android:layout_below="@+id/y_roll_reverse"
	            android:layout_marginTop="32dp"
	            android:text="@string/z_yaw"
	            android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/x_pitch_reverse_default"
                android:layout_alignTop="@+id/x_pitch_reverse"
                android:layout_toRightOf="@+id/x_pitch_reverse"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/x_pitch_reverse"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/y_roll_reverse_default"
                android:layout_alignTop="@+id/y_roll_reverse"
                android:layout_toRightOf="@+id/y_roll_reverse"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/y_roll_reverse"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/z_yaw_reverse_default"
                android:layout_alignTop="@+id/z_yaw_reverse"
                android:layout_toRightOf="@+id/z_yaw_reverse"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/z_yaw_reverse"
                />

        </RelativeLayout>

	</ScrollView>
</LinearLayout>